<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{username}} on {{format_date date_created}}</p>
</div>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add Comment</h3>

    <form data-id="{{id}}" class="form new-comment-form">
      <div class="form-group">
        <label for="comment-box">comment:</label>
        <textarea class="form-input" id="comment-box" name="comment-box"></textarea>
      </div>
    
      <div class="form-group">
        <button id="submit-comment"  type="submit" class="btn btn-primary">Submit Comment</button>
      </div>
    </form>
  </div>

  {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Current Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{comment.id}}">{{comment.username}}</a></h4>
        <p>{{comment.comment}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/comment.js"></script>